<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- El archivo se crea en drawable con root element shape, para poder
     poner el shape rectangle después de la referencia al xml.
     Se añade la etiqueta de gradient para añadirle una gradiante
     de color al archivo, la cual se puede configurar-->

    <gradient
        android:angle="-90"
        android:startColor="#00000000"
        android:centerColor="#00000000"
        android:endColor="#99000000"
        android:type="linear"/>

</shape>